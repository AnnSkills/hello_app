<h1>Users of application</h1>
<p style="color: green"><%= notice %></p>

<style>
    .flickr_pagination {
        text-align: center;
        padding: 0.3em;
        cursor: default; }
    .flickr_pagination a, .flickr_pagination span, .flickr_pagination em {
        padding: 0.2em 0.5em;
        border-radius: 5px;
    }
    .flickr_pagination .disabled {
        color: #609a7b; }
    .flickr_pagination .current {
        font-style: normal;
        font-weight: bold;
        color: #0020ff; }
    .flickr_pagination a {
        border: 1px solid whitesmoke;
        color: whitesmoke;
        text-decoration: none; }
    .flickr_pagination a:hover, .flickr_pagination a:focus {
        border-color: #2fa455;
        background: #816288;
        color: #2fa455; }
    .flickr_pagination .page_info {
        color: #ff9100;
        padding-top: 0.8em; }
    .flickr_pagination .previous_page, .flickr_pagination .next_page {
        border-width: 2px; }
    .flickr_pagination .previous_page {
        margin-right: 1em; }
    .flickr_pagination .next_page {
        margin-left: 1em; }
</style>


<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<div class="card text-center">
  <div class="card-header">
    Featured
  </div>
  <% @users.each do |user| %>
    <div class="card-body">
      <%= link_to user.username, user %>
      <%= link_to gravatar_for(user, size: 150), user %>
      <p class="card-text"><%= pluralize(user.links.count, "link") %></p>
      <div><%= link_to 'Show profile', user, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary" %>
      </div>
    </div>
    <div class="card-footer text-muted"><%= time_ago_in_words(user.created_at) %> ago</div>
  <% end %>

</div>

<div class="flickr_pagination mb-4 md-4">
  <%= will_paginate @users, :container => false %>
</div>
<%#= link_to "New user", new_user_path %>
